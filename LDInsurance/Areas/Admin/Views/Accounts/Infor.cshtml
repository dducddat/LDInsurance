@model IEnumerable<LDInsurance.Models.Account>

@{
    ViewData["Title"] = "Infor";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Your Account</h4>
                                <hr>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <form style="font-size: 20px">
                                    <div class="form-group row">
                                        <label class="col-2 col-form-label">Username:</label>
                                        <div class="col-10">
                                            <input class="form-control here" read only value="@Html.DisplayFor(modelItem => item.Username)" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-2 col-form-label">Password:</label>
                                        <div class="col-9">
                                            <input type="password" class="form-control here" read only value="@Html.DisplayFor(modelItem => item.Password)" disabled>
                                        </div>
                                        <div class="col-1">
                                            <a asp-action="ChangePass" asp-route-id="@item.ID" class="btn btn-primary" style="background-color: greenyellow; color: green; border-color: greenyellow"><i class="fas fa-edit"></i></a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>


                    </div>
                </div>
                <br />
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Your Information <a asp-action="Edit" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a></h4>
                                <hr>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <form style="font-size: 20px">
                                    <div class="form-group row">
                                        <label class="col-2 col-form-label">Full Name:</label>
                                        <div class="col-10">
                                            <input class="form-control here" read only value="@Html.DisplayFor(modelItem => item.Name)" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-2 col-form-label">Phone Number:</label>
                                        <div class="col-10">
                                            <input class="form-control here" read only value="@Html.DisplayFor(modelItem => item.Phone)" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-2 col-form-label">SSN:</label>
                                        <div class="col-10">
                                            <input class="form-control here" read only value="@Html.DisplayFor(modelItem => item.SSN)" disabled>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">You want to logout ?</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">Wish you a good day ♥</div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                                        <a class="btn btn-primary" style="background-color: greenyellow; border-color:greenyellow; color:green" asp-area="" asp-controller="Accounts" asp-action="Logout">Logout</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
</div>